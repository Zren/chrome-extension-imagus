{
    "author": "Deathamns,TFW",
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["includes/app.js"],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": ["<all_urls>"],
            "js": ["includes/content.js"],
            "run_at": "document_end",
            "all_frames": true
        },
        {
            "matches": ["https://*/search*"],
            "include_globs": ["https://www.google.*/search*"],
            "js": ["js/sp_gim.js"],
            "run_at": "document_idle"
        },
        {
            "matches": ["https://duckduckgo.com/*"],
            "css": ["css/sp_ddg.css"]
        }
    ],
    "default_locale": "en",
    "description": "With a simple mouse-over you can enlarge and display images/videos from links. Now with optional permissions, more features.",
    "homepage_url": "https://www.reddit.com/r/Imagus",
    "browser_action": {
        "default_icon": {
            "128": "icon.png",
            "18": "icon-18.png"
        },
        "default_title": "Imagus mod v0.10.14\nclick to toggle on/off\nshift click to open options page"
    },
    "icons": {
        "128": "icon.png",
        "18": "icon-18.png"
    },
    "manifest_version": 2,
    "name": "Imagus mod",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "permissions": ["*://*/*", "storage", "menus"],
    "optional_permissions": ["downloads", "history"],
    "version": "0.10.14"
}
